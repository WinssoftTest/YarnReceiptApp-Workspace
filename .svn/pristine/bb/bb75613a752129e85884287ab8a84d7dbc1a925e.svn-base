}
.login-container{
  margin: 0 auto;
  width: 90%;
  display: grid;
  gap: 1rem;
}
.div-container{
width: 100%;
display: grid;
gap: 0.5rem;
}
label{
width: 100%;
    font-family: 'Cairo', sans-serif;
      font-weight: 500;
          font-size: 15px;
          letter-spacing: 1px;
}
sup{
  font-size: 15px;
  color: red;
}
select{
    width: 100%;
    padding: 8px 0;
    font-weight: 600;
    border-radius: 6px;
      border: 1px solid gray;
      background-color: white !important;
 }
 option{
  padding: 5px 10px;
 }
 input{
  font-size: 15px; color: navy; padding: 8px !important;
  border-radius: 6px;
